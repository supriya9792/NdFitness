<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:layout_marginLeft="@dimen/spacing_middle"
    android:layout_marginRight="@dimen/spacing_middle"
    android:layout_marginTop="@dimen/spacing_medium"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyt_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/Topline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--<View-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/user_top"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_gravity="center_vertical">
                <com.mikhaellopez.circularimageview.CircularImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/input_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/nouser"
                    android:layout_gravity="center_vertical"
                    app:civ_border_width="2dp"
                    app:civ_shadow_color="@color/white"
                    app:civ_fill_color="@color/white"
                    app:civ_border_color="@color/grey_10"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:text="Atul Patil"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/contactTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7028259696"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:autoLink="phone"
                        android:textSize="12sp"
                        android:visibility="visible"/>
                    <!--<ImageView-->
                        <!--android:id="@+id/contactIV"-->
                        <!--android:layout_width="24dp"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:src="@drawable/ic_local_phone"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="right|bottom"
                        android:gravity="right|bottom"
                        android:textStyle="bold"
                        android:text="DOB: "/>
                    <TextView
                        android:id="@+id/dobTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start|bottom"
                        android:gravity="start|bottom"
                        android:textSize="10sp" />
                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/green"
                        android:padding="@dimen/spacing_medium"
                        android:src="@drawable/ic_active_member"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right|center_vertical"
                        android:textStyle="bold"
                        android:text="Gender: "/>
                    <TextView
                        android:id="@+id/genderTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="2dp"
                        android:gravity="left"
                        android:text="@string/gender"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/occupation"
                            android:textSize="10sp"
                            android:layout_gravity="left"
                            android:textStyle="bold"
                            android:gravity="left" />

                        <TextView
                            android:id="@+id/occupationTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:text="Blood Group:"/>

                        <TextView
                            android:id="@+id/bloodgrpTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="left|center_vertical"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/excecutive_nameTV"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="excecutive"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
            <!--<View-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/user_top"/>-->

        </LinearLayout>
        <View
            android:id="@+id/leftline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECEFF1" />

    </LinearLayout>
</android.support.v7.widget.CardView>