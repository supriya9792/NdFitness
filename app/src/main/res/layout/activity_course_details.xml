                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/package_nameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="start"
                                    android:layout_marginLeft="2dp"
                                    android:textSize="9sp" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/paidTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="9sp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="2dp"
                                android:gravity="right"
                                android:text="@string/followup_date"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:id="@+id/duration"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:layout_marginLeft="2dp"
                                android:text="duration "/>
                            <TextView
                                android:id="@+id/balanceTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="9sp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="2dp"
                                android:gravity="right"
                                android:text="@string/followup_date"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/start_to_end_date_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="9sp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_gravity="left|center_vertical"
                                    android:gravity="left|center_vertical"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="right"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/excecutive_nameTV"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:text="excecutive"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="10sp"-->
                            <!--android:layout_gravity="right|center_vertical"-->
                            <!--android:gravity="right|center_vertical"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="Paid: "/>-->

                            <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:id="@+id/nextPaydateLyt"-->
                            <!--android:visibility="gone">-->
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="10sp"-->
                            <!--android:layout_gravity="right|center_vertical"-->
                            <!--android:gravity="right|center_vertical"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="Next payment date: "/>-->
                            <!--<TextView-->
                            <!--android:id="@+id/next_payment_dateTV"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="right"-->
                            <!--android:gravity="right"-->
                            <!--android:text="10-05-2019"-->
                            <!--android:textSize="10sp" />-->
                            <!--</LinearLayout>-->

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="10sp"-->
                            <!--android:layout_gravity="right|center_vertical"-->
                            <!--android:gravity="right|center_vertical"-->
                            <!--android:textStyle="bold"-->
                            <!--android:text="Balance: "/>-->



                        </LinearLayout>
                    </LinearLayout>
                    <!--<View-->
                    <!--android:layout_width="10dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@drawable/user_top"/>-->

                </LinearLayout>
                <View
                    android:id="@+id/leftline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/phone_call"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorPrimaryWeb"
                app:srcCompat="@drawable/ic_local_phone" />

            <View
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/message"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/deep_orange_900"
                app:srcCompat="@drawable/follow" />

            <View
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="24dp"
                android:id="@+id/whatsapp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/whatsappcolor"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/spacing_large"
                android:adjustViewBounds="true"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECEFF1"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:foregroundGravity="top"
            android:indeterminate="true"
            android:visibility="visible"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:orientation="vertical"
           android:padding="@dimen/spacing_medium">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Transaction Details:"
               android:textColor="@color/black"
               android:textAppearance="@style/TextAppearance.AppCompat.Small" />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#ECEFF1"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/spacing_medium">


               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:text="Receipt Date"
                   android:textSize="12sp"
                   android:textColor="@android:color/black" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Paid Amount"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:autoLink="phone"
                   android:textSize="12sp"
                   android:textColor="@android:color/black"
                   android:visibility="visible"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Remaining Balance"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:autoLink="phone"
                   android:textSize="12sp"
                   android:textColor="@android:color/black"
                   android:visibility="gone"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="10sp"
                   android:textColor="@android:color/black"
                   android:layout_gravity="center"
                   android:layout_marginLeft="2dp"
                   android:gravity="center"
                   android:text="@string/payment_type"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textColor="@android:color/black"
                   android:text="Receipt Executive"
                   android:textSize="10sp" />
           </LinearLayout>
       </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false" />

        <include layout="@layout/no_data"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_balance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Balance"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/btn_followup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Followup"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/btn_attendence"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Attendance"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>