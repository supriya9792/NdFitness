<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CourseDetailsActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_10"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lyt_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <View
                    android:id="@+id/Topline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="@dimen/spacing_small"
                    android:layout_weight="1">

                    <!--<View-->
                    <!--android:layout_width="10dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@drawable/user_top"/>-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/input_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/nouser"
                            android:layout_gravity="center_vertical"
                            app:civ_border_width="2dp"
                            app:civ_shadow_color="@color/white"
                            app:civ_fill_color="@color/white"
                            app:civ_border_color="@color/grey_10"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/reg_dateTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:layout_gravity="left"
                                android:layout_marginRight="4dp"
                                android:gravity="left"
                                android:text="@string/hint_register"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:text="@string/invoice_id"/>
                            <TextView
                                android:id="@+id/invoice_idTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:layout_marginRight="2dp"
                                android:text="@string/hint_register"/>
                            <TextView
                                android:id="@+id/contactTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="7028259696"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:textSize="10sp"
                                android:visibility="visible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/nameTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="2.5"
                                android:gravity="left"
                                android:text="Atul Patil"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/rateTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="right|bottom"
                                android:layout_marginLeft="2dp"
                                android:gravity="right|bottom"
                                android:text="@string/followup_date"/>
                            <!--<ImageView-->
                            <!--android:id="@+id/contactIV"-->
                            <!--android:layout_width="24dp"-->
                            <!--android:layout_height="24dp"-->
